<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Account.planner.addTab">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/eventNameText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Event Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eventNameValue"
        android:layout_width="189dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/eventNameText"
        app:layout_constraintTop_toTopOf="@+id/eventNameText" />

    <TextView
        android:id="@+id/eventNotesText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Event Notes:"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintStart_toStartOf="@+id/eventDescriptionText"
        app:layout_constraintTop_toBottomOf="@+id/eventDescriptionText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/eventNotesValue"
        android:layout_width="189dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/eventNotesText"
        app:layout_constraintTop_toBottomOf="@+id/eventDescriptionValue" />

    <TextView
        android:id="@+id/eventDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Event Descrption:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventNameText" />

    <EditText
        android:id="@+id/eventDescriptionValue"
        android:layout_width="189dp"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Description"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/eventNameValue"
        app:layout_constraintTop_toBottomOf="@+id/eventNameValue" />

    <Button
        android:id="@+id/eventAddButton"
        android:layout_width="86dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="564dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventNotesValue"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>